gem 'bundler', "=2.0.1"
require 'bundler'
Bundler.require

#rake run
task :run do
    sh 'bundle _2.0.1_  exec rerun --no-notify --ignore "*.{slim,js,css}" "rackup --host 0.0.0.0"'
end

#rake debug
task :debug do
	sh 'rackup'
end

task :test do
    sh 'rspec'
end

begin
    require 'rspec/core/rake_test'
    
    RSpec::Core::RakeTask.new :test do |t|
        t.pattern = ['spec/*_spec.rb']
    end

rescue LoadError

end
